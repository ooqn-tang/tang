<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
    <context id="MySqlContext" targetRuntime="MyBatis3" defaultModelType="flat">
        <property name="beginningDelimiter" value="`"/>
        <property name="endingDelimiter" value="`"/>
        <property name="javaFileEncoding" value="UTF-8"/>
        <!-- 为模型生成序列化方法-->
        <plugin type="org.mybatis.generator.plugins.SerializablePlugin"/>
        <!-- 为生成的Java模型创建一个toString方法 -->
        <plugin type="org.mybatis.generator.plugins.ToStringPlugin"/>
        <!--生成mapper.xml时覆盖原文件-->
        <plugin type="org.mybatis.generator.plugins.UnmergeableXmlMappersPlugin" />
        <commentGenerator type="tool.CommentGenerator">
            <!-- 是否去除自动生成的注释 true：是 ： false:否 -->
            <property name="suppressAllComments" value="true"/>
            <property name="suppressDate" value="true"/>
            <property name="addRemarkComments" value="true"/>
        </commentGenerator>

        <jdbcConnection driverClass="org.h2.Driver"
                        connectionURL="jdbc:h2:file:~/.h2/Tang"
                        userId="root"
                        password="root">
            <!--解决mysql驱动升级到8.0后不生成指定数据库代码的问题-->
            <property name="nullCatalogMeansCurrent" value="true" />
        </jdbcConnection>

        <javaModelGenerator targetPackage="net.ttcxy.tang.gateway.entity.model" targetProject="tang-gateway\src\main\java"/>

        <sqlMapGenerator targetPackage="mapper" targetProject="tang-gateway\src\main\resources\dao"/>

        <javaClientGenerator type="XMLMAPPER"
                             targetPackage="net.ttcxy.tang.gateway.dao.mapper"
                             targetProject="tang-gateway\src\main\java"/>
        <!--生成全部表tableName设为%-->
        <table tableName="dts_%" enableSelectByExample="false"/>
        <table tableName="uts_%" enableSelectByExample="false"/>
        <table tableName="sts_%" enableSelectByExample="false"/>
    </context>
</generatorConfiguration>