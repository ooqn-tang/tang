<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.ttcxy.tang.admin.dao.UtsRoleDao">
    <resultMap id="BaseResultMap" type="net.ttcxy.tang.admin.entity.dto.UtsRoleDto">
        <id column="id" jdbcType="VARCHAR" property="id" />
        <result column="role_name" jdbcType="VARCHAR" property="name" />
        <result column="role_value" jdbcType="VARCHAR" property="value" />
        <result column="create_time" jdbcType="TIMESTAMP" property="createTime" />
    </resultMap>

    <select id="selectRoleListByMemberId" resultMap="BaseResultMap">
        select t3.*
        from uts_member t1 ,uts_member_role t2 ,uts_role t3
        where t1.id = t2.member_id and t2.role_id = t3.id and t1.id = #{memberId}
    </select>
    <select id="getTreeRoles" resultType="net.ttcxy.tang.admin.entity.dto.UtsRoleDto"></select>
</mapper>