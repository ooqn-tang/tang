<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.ttcxy.tang.portal.dao.DtsCommentDao">
    <resultMap id="CommentMap" type="net.ttcxy.tang.portal.entity.dto.DtsCommentDto">
        <id column="comment_id" jdbcType="VARCHAR" property="commentId" />
        <result column="status" jdbcType="INTEGER" property="status" />
        <result column="author_id" jdbcType="VARCHAR" property="authorId" />
        <result column="content" jdbcType="VARCHAR" property="content" />
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
    </resultMap>

    <select id="selectComments" resultType="net.ttcxy.tang.portal.entity.dto.DtsCommentDto">
        select t1.author_id,t1.comment_id,t1.data_id,t1.status,t2.nickname,t2.username,t1.create_date,t1.content
        from `dts_comment` t1 , `uts_author` t2
        where t2.author_id = t1.author_id
        and t1.data_id = #{id}
        order by create_date asc
    </select>
</mapper>