<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.ttcxy.tang.gateway.dao.CommentDao">
    <resultMap id="CommentMap" type="net.ttcxy.tang.gateway.entity.dto.CommentDto">
        <id column="id" jdbcType="VARCHAR" property="id" />
        <result column="blog_id" jdbcType="VARCHAR" property="blogId" />
        <result column="status" jdbcType="INTEGER" property="status" />
        <result column="user_id" jdbcType="VARCHAR" property="userId" />
        <result column="content" jdbcType="VARCHAR" property="content" />
        <result column="create_date" jdbcType="TIMESTAMP" property="createDate" />
    </resultMap>

    <select id="selectComments" resultType="net.ttcxy.tang.gateway.entity.dto.CommentDto">
        select bc.user_id,bc.id,bc.blog_id,bc.status,u.nickname,u.username,bc.create_date,bc.content
        from `blog_comment` bc , `user` u
        where u.id = bc.user_id
        and bc.blog_id = #{id}
        order by create_date ASC
    </select>

    <select id="selectComment" resultType="net.ttcxy.tang.gateway.entity.dto.CommentDto">
        select bc.user_id,bc.id,bc.blog_id,bc.status,u.nickname,u.username,bc.create_date,bc.content
        from `blog_comment` bc , `user` u
        where u.id = bc.user_id
        and bc.id = #{id}
    </select>

</mapper>