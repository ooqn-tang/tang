<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.ttcxy.tang.gateway.dao.UserDao">

  <resultMap id="UserMap" type="net.ttcxy.tang.gateway.entity.LoginUser">
      <id column="id" jdbcType="VARCHAR" property="id" />
      <result column="username" jdbcType="VARCHAR" property="username" />
      <result column="nickname" jdbcType="VARCHAR" property="nickname" />
      <result column="password" jdbcType="VARCHAR" property="password" />
      <result column="signature" jdbcType="VARCHAR" property="signature" />
      <result column="mail" jdbcType="VARCHAR" property="mail" />
  </resultMap>

    <select id="selectEmailIsTrue" resultType="integer">
        select count(1)
        from `user`
        where mail = #{mail}
    </select>

    <select id="selectUsernameIsTrue" resultType="integer">
        select count(1)
        from `user`
        where username = #{username}
    </select>

    <select id="selectNicknameIsTrue" resultType="integer">
        select count(1)
        from `user`
        where nickname = #{nickname}
    </select>

    <select id="selectUserByMail" resultMap="UserMap">
        select id,username,nickname,password,signature,mail
        from `user`
        where mail = #{mail}
    </select>



    <select id="selectUserByName" resultMap="UserMap">
        select id,username,nickname,password,signature,mail
        from `user`
        where username = #{username}
    </select>

    <select id="selectLoginUserByMail" resultMap="UserMap">
        select id,username,nickname,password,signature,mail
        from `user`
        where mail = #{mail}
    </select>
</mapper>