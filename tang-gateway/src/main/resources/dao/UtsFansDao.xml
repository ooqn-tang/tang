<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.ttcxy.tang.gateway.dao.UtsFansDao">
  <resultMap id="FansMap" type="net.ttcxy.tang.gateway.entity.dto.UtsFansDto">
      <id column="fans_id" jdbcType="VARCHAR" property="fansId" />
      <result column="be_author_id" jdbcType="VARCHAR" property="beAuthorId" />
      <result column="author_id" jdbcType="VARCHAR" property="authorId" />
      <result column="username" jdbcType="VARCHAR" property="username" />
      <result column="nickname" jdbcType="VARCHAR" property="nickname" />
      <result column="create_date" jdbcType="VARCHAR" property="createDate" />
  </resultMap>

    <select id="selectFans"  resultType="Integer" parameterType="net.ttcxy.tang.gateway.entity.dto.UtsFansDto">
      select count(1)
      from `uts_fans`
      where user_id = #{userId}
      and follower = #{follower}
    </select>

    <select id="selectFansList" resultMap="FansMap">
        select f.fans_id,a.username,a.nickname
        from `uts_fans` f,`uts_author` a
        where a.author_id = f.author_id
        and f.author_id = #{authorId}
        order by f.create_date Desc
    </select>

    <insert id="insertFans" parameterType="net.ttcxy.tang.gateway.entity.dto.UtsFansDto">
        insert into `uts_fans` (id,user_id,follower,create_date)
        values (#{id},#{userId},#{follower},#{createDate})
    </insert>

   <delete id="deleteFans" parameterType="net.ttcxy.tang.gateway.entity.dto.UtsFansDto">
       delete
       from `uts_fans`
       where user_id = #{userId}
       and follower = #{follower}
   </delete>

</mapper>